    @using Ictshop.Models

    <style type="text/css">
        body {
            background-color: #F0F0F0;
        }

        .navbar-inverse {
            background-color: #f542c2;
            border-color: #f542c2;
        }

        .top_header {
            background-color: Black;
            padding-left: 190px;
            color: #f542c2;
            height: 40px;
            overflow: hidden;
            position: relative;
        }

        .form-inline {
            float: right;
            padding-top: 10px;
        }

        .navbar-inverse .navbar-nav > li > a {
            color: white;
            font-size: x-large;
        }

        .navbar-inverse .navbar-brand {
            color: white;
        }

        .navbar-inverse .navbar-nav > li > a {
            color: white;
            font-size: large;
        }

            .navbar-inverse .navbar-nav > li > a:hover {
                color: black;
            }

        .navbar-brand {
            color: cadetblue;
        }
        .container{

        }
        .spnoibat {
            background-color: white;
        }

            .spnoibat h3 {
                padding-left: 30px;
            }

        .giohang {
            color: #f542c2;
        }

        .giohang2 {
            position: absolute;
            text-align: center;
        }

        .footer-color {
            color: #f542c2;
        }

        .text-reset {
            color: #f542c2;
        }

        .text-reset-black {
            color: black;
        }

        .spnoibat {
            position: relative;
            overflow: hidden;
        }

            .spnoibat row {
                position: absolute;
            }
