<body>

    @{
        var u = Session["use"] as Ictshop.Models.Nguoidung;
    }

    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="top_header col-md-12">

            <div class="row">
                @*<div class="col-sm-2"><img class="navbar-brand" src="~/HinhanhSP/logo1.jpg" width="20" height="20" style="padding:0" /></div>*@
                <div class="col-sm-4 col-md-0" style="font-size:2em; ">PERFUME</div>

                <div class="col-sm-7 col-md-0 giohang2" style="padding-left:250px">
                    @Html.Action("GioHangPartial", "GioHang", new { @class = "giohang" })
                </div>
                @*@Html.Action("GioHangPartial", "GioHang",new { @style = "color:#f542c2" })*@
                @{
                    if (u != null)
                    {
                        <div class="col-sm-4 col-md-0" style=" top: 9px; position:absolute; right:-70px">
                            Xin chào : @u.Email
                            &nbsp;
                            @*@Html.ActionLink("ĐĂNG XUẤT", "DangXuat", "User", new { style = "color:red" })*@
                            <a style="color: #f542c2" href="/User/DangXuat">ĐĂNG XUẤT</a>
                        </div>
                    }
                    else
                    {
                        <div class="col-sm-4 col-md-0" style=" top: 9px; position:absolute; right:-70px">
                            <a style="color: #f542c2; font-size: large" href="/User/Dangky"> Đăng ký</a>
                            &nbsp;
                            <a style="color: #f542c2; font-size: large" href="/User/Dangnhap"> Đăng nhập</a>
                        </div>
                    }
                }


            </div>

        </div>
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <form class="form-inline" style="float:left">
                    <input class="form-control mr-sm-2" type="search" placeholder="Tìm kiếm sản phẩm..." aria-label="Search">
                    @*<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>*@
                </form>

            </div>

            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">
                    <li>
                        <a href="/Home/Index" title="TRANGCHU">
                            @*<span><i class=" glyphicon-music "></i></span>*@
                            <span>TRANG CHỦ</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Home/Index" title="Sanpham">
                            @*<span><i class=" glyphicon-music "></i></span>*@
                            <span>SẢN PHẨM</span>
                        </a>
                    </li>
                    @*<span><i class=" glyphicon-music "></i> </span>
        <br />
        <span>@Html.ActionLink("Trang chủ", "Index", "Home") </span>*@
                  
                    <li>
                        <a style="color:white"
                           class="nav-link"
                           href="@Url.Action("Index", "DonHangs")">ĐƠN HÀNG</a>
                    </li>
                </ul>
            </div>

        </div>
    </div>


    <br>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <div>
            <img class="img-responsive" src="~/HinhanhSP/banner.jpg" />
        </div>
        <br />
